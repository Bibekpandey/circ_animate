{
    "languageserver": {
        "haskell": {
            "command": "hastec",
            "rootPatterns": [
            ".stack.yaml",
            "cabal.config",
            "package.yaml"
            ],
            "filetypes": [
            "hs",
            "lhs",
            "haskell"
            ],
            "initializationOptions": {
                "languageServerHaskell": {
                    "hlintOn": true
                }
            }
        }
    },
  "python.jediEnabled": false,
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true
}
